@model ModelEF.Model.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";

}

<div class="container">
    <div class="col-sm-9">
        <div class="nn-product-essential">
            <div class="nn-product-detail-image col-sm-6">
                <img class="img-responsive" src="~/Content/Image Phones/Iphone/@Model.Image" style="border:1px solid #ebebeb;width:100%;height:auto" />
                <img style="height:30%;width:30%;margin-top:-35%;margin-left:65%" src="~/Images/lblbaohanh.png" alt="Bảo hành ưu đãi" />
            </div>
            <div class="col-sm-6">
                <h1 style="font-weight:600;color:black">Điện thoại @Model.ID</h1>
                <h4 style="font-weight:600;color:black">Mục: @Model.Category.Name</h4>
                <h4 style="color:black">Khuyến Mại Còn: @Html.FormatValue(Model.UnitCost, "{0:#,##0}")&#8363;</h4>
                <h4 style="color:black">Số lượng: <input aria-label="quantity" style="width:10%;border:1px solid #ebebeb;"  max="10" min="1" name="" id="count" type="number" value="1" /> <br /><br /></h4>
                <button style="background-color:#ef4339" class="btn btn-default" " title="Add to cart">
                    <span style="color:white">Thêm Vào Giỏ</span>
                </button>
            </div>
        </div>
        <div class="clearfix"></div>
        <br />
        <br />
        <div class="row">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist" >
                <li  style="background:#DADADA;box-shadow: inset 0 -8px 7px -9px rgba(0,0,0,.4), -2px -2px 5px -2px rgba(0,0,0,.4);"role="presentation" class="active"><a href="#Mota" aria-controls="Mota" role="tab" data-toggle="tab">Mô Tả</a></li>
                <li style="background:#DADADA;box-shadow: inset 0 -8px 7px -9px rgba(0,0,0,.4), -2px -2px 5px -2px rgba(0,0,0,.4);" role="presentation"><a href="#Thongsokythuat" aria-controls="Thongsokythuat" role="tab" data-toggle="tab">Thông số kỹ thuật</a></li>
                <li style="background:#DADADA;box-shadow: inset 0 -8px 7px -9px rgba(0,0,0,.4), -2px -2px 5px -2px rgba(0,0,0,.4);" role="presentation"><a href="#Danhgia" aria-controls="Danhgia" role="tab" data-toggle="tab">Đánh giá</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="Mota">
                    <div>
                        <h4>
                            <i>
                                "Đến hẹn lại lên, năm nay Apple giới thiệu tới người dùng thế hệ tiếp theo với 3 phiên bản, trong đó có cái tên 
                                <a style="text-decoration:none" title="Điện thoại đẹp, sang trọng, giá ưu đãi" data-id="@Model.ID">@Model.Name</a> với những nâng cấp mạnh mẽ về phần cứng đến hiệu năng, màn hình cùng hàng loạt các trang bị cao cấp khác.
                                <br />Hiệu năng đỉnh cao đến từ con chip Apple A12"
                            </i>
                        </h4>
                        <span>
                            Ngoài điện thoại thì năm nay iPhone cũng đã chính thức ra mắt chip A12 bionic thế hệ mới với những nâng cấp vượt trội về mặt hiệu năng.
                        </span>
                        <br />
                        <img style="height:90%;width:90%" src="~/Images/iphone-xs-2-1.jpg" alt="Chip Apple A12 siêu mượt" />
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane col-lg-6 col-sm-6" id="Thongsokythuat">
                    <table class="table table-hover table-striped table-responsive">

                        <tr>
                            <td>Mô tả</td>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <td>Giá</td>
                            <td>@Model.UnitCost</td>
                        </tr>
                        <tr>
                            <td>Số lượng</td>
                            <td>@Model.Quantity</td>
                        </tr>
             

                    </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="Danhgia">
                    <br />
                    <form class="form-horizontal col-sm-12">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <textarea class="form-control" rows="10" placeholder="Gửi đánh giá của bạn vào đây..."></textarea>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 ">
                                <button type="submit" class="btn btn-primary">Đánh giá</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="nn-product-view-right col-sm-3 nn-margin-bottom">
        <aside>
            <div style="background-color:#fed101;"><h3>Sản Phẩm Khuyến Mại</h3></div>
            <div id="demo5" class="scroll-img">
                <ul>
                    @foreach (var d in Model.Category.Products.OrderBy(p => Guid.NewGuid()).Skip(1).Take(10))
                    {
                        <li>
                            <div class="row">

                                <div class="nn-product-box">
                                    <a href="/Product/Detail/@d.ID">

                                        <img class="img-responsive" title="@d.Name" src="~/Content/Image Phones/Iphone/@d.Image" alt="@Model.Name" />
                                    </a>
                                    <div class="nn-product-box-descriptions">
                                        <h3 class="nn-product-box-name">
                                            <a href="/Product/Detail/@d.ID" title="@d.Name">@d.Name</a>
                                        </h3>
                                        <div class="nn-product-box-price ">
                                            <span class="" style="font-weight:600;color:red">@Html.FormatValue(d.UnitCost, "{0:#,##0}")&#8363;</span>
                                        </div>                                        
                                    </div>
                                </div><!--end nn-product-box-->
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div id="demo5-btn" class="text-center">
                <button style="background-color:#ef4339;color:white" class="btn btn-default" id="demo5-backward">Lên<i  style="color:white" class="glyphicon glyphicon-arrow-up"></i> </button>
                <button style="background-color:#ef4339;color:white" class="btn btn-default" id="demo5-forward">Xuống<i style="color:white"  class="glyphicon glyphicon-arrow-down"></i></button>
            </div>

        </aside>

    </div>

</div>
<br /><br />
<style>

    .scroll-img {
        border-left: 1px solid #DADADA;
        overflow: hidden;
    }

    .scroll-img ul {
        height: 800px;
        margin: 0;
    }

            .scroll-img ul li {
                display: block;
            }
</style>
<script>
    function muahang(id) {
        var soluong = document.getElementById("count").value;
        document.location.href = "/SCart/giohang?id=" + id + "&soluong=" + soluong;
        //window.location=myURL;
    }
</script>
@section scripts{
    <script src="/Content/js/jquery-1.10.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="/Content/js/jquery-ui.js"></script>
    <script src="/Content/js/jquery.scrollbox.js"></script>
    <script>
        $(function () {
            $('#demo5').scrollbox({
                linear: false,  // Scroll method
                startDelay: 2,  // Start delay (in seconds)
                delay: 3,   // Delay after each scroll event (in seconds)
                step: 5,// Distance of each single step (in pixels)
                speed: 32,  // Delay after each single step (in milliseconds)
                switchItems: 1, // Items to switch after each scroll event
                direction: 'vertical',
                distance: 'auto',
                autoPlay: true,
                onMouseOverPause: true,
                paused: false,
                queue: null
            });
            $('#demo5-backward').click(function () {
                $('#demo5').trigger('backward');
            });
            $('#demo5-forward').click(function () {
                $('#demo5').trigger('forward');
            });
        });
    </script>
